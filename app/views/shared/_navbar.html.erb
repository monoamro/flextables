<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= image_tag asset_url "newlogo2_white.png" %>
  <div class="collapse navbar-collapse align-middle" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item navbar-text">
          <p><strong>Welcome, <%= current_user.first_name %>!</strong></p>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag asset_url("portrait.jpg"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
