<div class="mainbody">
  <header>
    <div class="container" id="headcontent">
      <div class="row d-flex align-items-center">
        <div class="col-sm-3 logo">
          <%= image_tag asset_url("newlogo2_white.png") %>
        </div>

        <div class="col-sm-6 justify-content-center">
          <h1>Welcome to FlexClasses</h1>
          <p>The easy way to plan your Flex Classes</p>
        </div>
      </div>
    </div>
  </header>

  <div class="container" id="maincontent">
    <div class="row">
      <div class="col-sm-6 d-flex align-items-center">
        <div class="textarea p-4">
          <h2>What is FlexTables?</h4>
          <p>FlexTables is optimist for schools with "Lernb√ºro" System.</p>
          <br>
          <h2>For Teachers:</h4>
          <p>Keep track of your student's flex classes, digitalise content and homework and keep track of attendance.</p>
          <br>
          <h2>For Students:</h4>
          <p>Organise your flex classes and keep track of your homework.</p>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="textarea p-5">
              <header class="head-form">
                <h2>Let's start</h2>
              </header>
              <br>

              <div class="field-set">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email" } %>
                    <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password" } %>
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>

                  <div class="form-actions text-center">
                    <%= f.submit "Log in", class: "btn log-in" %>
                  </div>
                <% end %>
              </div>

              <div class="d-flex justify-content-center">
                <%= render "devise/shared/links" %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
