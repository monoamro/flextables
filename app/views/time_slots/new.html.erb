<div class="container textarea">
  <div class="field-set">
    <% lessons = Lesson.select { |lesson| lesson.weekly_periods.include? (params[:weekly_period]) }.map(&:title) %>
    <%= simple_form_for [@time_slot] do |f| %>
      <div class="form-inputs text-center">
        <%= f.label :Lesson %> <br>
        <%= f.select :lesson, lessons %> <br>
        <%= f.hidden_field :weekly_period, value: params[:weekly_period] %>
      </div>
      <div class="form-actions text-center">
        <%= f.submit "Add a flex lesson", class: "btn submits sign-up mt-5" %>
      </div>
    <% end %>
  </div>
</div>
